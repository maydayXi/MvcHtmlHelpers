@model IEnumerable<MvcHtmlHelpers.Models.Employee>
@{
    ViewBag.Title = "Index";
    var user = ViewBag.User;
}

<div class="card mt-3 mb-3 shadow">
    <div class="card-title mb-0 alert-warning p-3">
        <h2 class="font-weight-bold text-center w-100 ml-3">
            <i class="fa fa-user"></i><span class="ml-3">員工資料</span>
        </h2>
    </div>
    <div class="card-body p-0">
        <table class="table table-striped table-hover table-bordered mb-0">
            <thead class="thead-dark text-center">
                <tr>
                    <th>@Html.DisplayNameFor(m => m.Id)</th>
                    <th>@Html.DisplayNameFor(m => m.Name)</th>
                    <th>@Html.DisplayNameFor(m => m.Mobile)</th>
                    <th>@Html.DisplayNameFor(m => m.Email)</th>
                    <th>@Html.DisplayNameFor(m => m.Department)</th>
                    <th>@Html.DisplayNameFor(m => m.Title)</th>
                    <th>更新</th>
            </thead>
            <tbody>
                @foreach (var e in Model)
                {
                    <tr>
                        <td class="text-center">@Html.DisplayFor(m => e.Id)</td>
                        <td>@Html.DisplayFor(m => e.Name)</td>
                        <td>@Html.DisplayFor(m => e.Mobile)</td>
                        <td>@Html.DisplayFor(m => e.Email)</td>
                        <td>@Html.DisplayFor(m => e.Department)</td>
                        <td>@Html.DisplayFor(m => e.Title)</td>
                        <td class="text-center">
                            <a href="@Url.Action("Details",  new { id = e.Id})"
                               class="btn btn-info font-weight-bold shadow">
                                <i class="fa fa-list"></i>
                                明細
                            </a>
                            <a href="@Url.Action("Edit",  new { id = e.Id})"
                               class="btn btn-success font-weight-bold shadow">
                                <i class="fa fa-pencil"></i>
                                編輯
                            </a>
                            <a href="@Url.Action("Delete",  new { id = e.Id})"
                               class="btn btn-danger font-weight-bold shadow">
                                <i class="fa fa-trash-o"></i>
                                刪除
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="card-footer">
        <h3 class="w-100 text-center font-weight-bold">
            @DateTime.Now.ToString("yyyy-MM-dd")
        </h3>
    </div>
</div>

@Html.ActionLink("✙ 新增員工資料", "Create", null, 
new { @class = "btn font-weight-bold btn-warning shadow text-white" })
